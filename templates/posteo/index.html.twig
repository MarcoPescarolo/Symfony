{% extends 'base.html.twig' %}

{% block title %}Posteo index{% endblock %}

{% block body %}
    <h1>Posteo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for posteo in posteos %}
            <tr>
                <td>{{ posteo.id }}</td>
                <td>{{ posteo.titulo }}</td>
                <td>{{ posteo.descripcion }}</td>
                <td>
                    <a href="{{ path('app_posteo_show', {'id': posteo.id}) }}">show</a>
                    <a href="{{ path('app_posteo_edit', {'id': posteo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_posteo_new') }}">Create new</a>
{% endblock %}
