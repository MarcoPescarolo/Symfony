    <h1>Crear un nuevo comentario para "{{ posteo.titulo }}"</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_posteo_index') }}">Volver a la lista de posteos</a>
{% endblock %}